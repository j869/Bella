                                    <label for="callbackMessage" class="form-label">Best time to call:</label>
                                    <textarea id="callbackMessage" name="message" class="form-control" rows="2" placeholder="e.g., Weekdays 9am-5pm, or Evenings after 6pm" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-phone"></i> Request Callback
                                </button>
                                <button type="button" class="btn btn-secondary ms-2" onclick="hidePhoneForm()">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Admin Section (Hidden by default) -->
    <div class="admin-section" style="display: none;" id="adminSection">
        <div class="container">
            <h3 class="text-danger mb-4">
                <i class="fas fa-cog"></i> Administrator Panel
                <button class="btn btn-sm btn-outline-danger ms-2" onclick="toggleAdmin()">Hide</button>
            </h3>
            

            <!-- History Table -->
            <% if (locals.data && locals.data.length > 0) { %>
            <div class="card">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">
                        <button class="btn btn-link text-dark p-0" type="button" data-bs-toggle="collapse" data-bs-target="#historyCollapse" aria-expanded="false" aria-controls="historyCollapse">
                            <i class="fas fa-history"></i> Communication History (<%= locals.data.length %> records)
                        </button>
                    </h5>
                </div>
                <div id="historyCollapse" class="collapse">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Message</th>
                                        <th scope="col">Subject</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">IP</th>
                                        <th scope="col">Reply To</th>
                                        <th scope="col">File</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% locals.data.forEach((item, index) => { %>
                                        <tr>
                                            <th scope="row"><%= index + 1 %></th>
                                            <td><%= item.message.substring(0, 50) %>...</td>
                                            <td><%= item.subject %></td>
                                            <td><%= item.formatted_date %></td>
                                            <td><%= item.ip %></td>
                                            <td><%= item.replyto %></td>
                                            <td>
                                                <% if (item.file) { %>
                                                    <a href="<%= item.file %>" download="<%= item.original_filename %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                                        <i class="fas fa-download"></i>
                                                    </a>
                                                <% } else { %>
                                                    -
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p>&copy; 2025 Building Permits Victoria. Licensed building surveyors serving all of Victoria.</p>
            <p class="small">
                <a href="#" class="text-light me-3" onclick="toggleAdmin()">Admin</a>
                <span class="text-muted">|</span>
                <a href="#" class="text-light ms-3">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showAdjacentQuestions(show) {
            document.getElementById('adjacentQuestions').style.display = show ? 'block' : 'none';
        }

        function showEnvelopeQuestions(show) {
            document.getElementById('envelopeQuestions').style.display = show ? 'block' : 'none';
        }

        function showEasementQuestions(show) {
            document.getElementById('easementQuestions').style.display = show ? 'block' : 'none';
        }

        function showPhoneForm() {
            document.getElementById('phoneCallbackForm').style.display = 'block';
            document.getElementById('phoneCallbackForm').scrollIntoView({ behavior: 'smooth' });
            
            // Pre-populate callback form with data from estimate form
            const estimateForm = document.getElementById('estimateForm');
            const callbackForm = document.querySelector('#phoneCallbackForm form');
            
            if (estimateForm && callbackForm) {
                // Get values from estimate form
                const customerName = estimateForm.querySelector('#customerName')?.value || '';
                const phone = estimateForm.querySelector('#phone')?.value || '';
                const email = estimateForm.querySelector('#customerEmail')?.value || '';
                
                // Pre-populate callback form if fields are empty
                const callbackFirstName = callbackForm.querySelector('#callbackFirstName');
                const callbackPhone = callbackForm.querySelector('#callbackPhone');
                const callbackEmail = callbackForm.querySelector('#callbackEmail');
                
                if (callbackFirstName && !callbackFirstName.value && customerName) {
                    callbackFirstName.value = customerName;
                }
                if (callbackPhone && !callbackPhone.value && phone) {
                    callbackPhone.value = phone;
                }
                if (callbackEmail && !callbackEmail.value && email) {
                    callbackEmail.value = email;
                }
            }
        }

        function hidePhoneForm() {
            document.getElementById('phoneCallbackForm').style.display = 'none';
        }

        function toggleAdmin() {
            const adminSection = document.getElementById('adminSection');
            adminSection.style.display = adminSection.style.display === 'none' ? 'block' : 'none';
            if (adminSection.style.display === 'block') {
                adminSection.scrollIntoView({ behavior: 'smooth' });
            }
        }

        // Simple form validation (optional)
        document.getElementById('estimateForm').addEventListener('submit', function(e) {
            console.log('Form submitting to:', this.action);
            // Let the form submit naturally without manipulation
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>